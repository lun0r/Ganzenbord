<Window x:Class="Ganzenbord.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ganzenbord"
        d:DataContext="{d:DesignInstance Type=local:BoardData}"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="750"
        WindowState="Maximized">

    <!--WindowStyle = "None"-->

    <Grid x:Name="WindowGrid">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="700" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="700" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="250" />

            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <DataTemplate x:Key="PlayerOverviewTemplate">
                <StackPanel Orientation="Vertical">
                    <Image Source="{Binding AvatarPath}"
                           Height="40"
                           Width="40" />
                    <StackPanel Margin="5">
                        <TextBlock Text="Name:" />
                        <TextBlock Text="Position:" />
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="{Binding Name}" />
                        <TextBlock Text="{Binding CurrentBoardPosition ,Mode=TwoWay }" />
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="Dice 1:" />
                        <TextBlock Text="Dice 2:" />
                    </StackPanel>
                    <StackPanel Margin="5">
                        <TextBlock Text="{Binding Dice1,Mode=TwoWay}" />
                        <TextBlock Text="{Binding Dice2,Mode=TwoWay}" />
                    </StackPanel>
                </StackPanel>
            </DataTemplate>
        </Grid.Resources>
        <ListView VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  x:Name="PlayersListView"
                  ItemTemplate="{StaticResource PlayerOverviewTemplate }"
                  Grid.Row="1"
                  Grid.Column="2">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.Background>
                <SolidColorBrush Color="Aqua" />
            </ListView.Background>
        </ListView>

        <Border Grid.Row="1"
                Grid.Column="1" />
        <Grid x:Name="BoardGrid"
              Grid.Row="1"
              Grid.Column="1">
            <Grid.Resources>
                <Style TargetType="Image">

                    <Setter Property="Stretch"
                            Value="Fill" />
                </Style>
                <Style TargetType="WrapPanel">
                </Style>
                <Style TargetType="Label">
                    <Setter Property="FontSize"
                            Value="20" />
                    <Setter Property="Foreground"
                            Value="GhostWhite" />
                </Style>
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
        </Grid>

        <StackPanel Grid.Row="1"
                    Visibility="Collapsed"
                    Grid.Column="2"
                    Background="LightGray">

            <ComboBox x:Name="CBSelectTheme"
                      SelectionChanged="select_SelectionChanged">
                <ComboBoxItem Content="Select theme"
                              IsSelected="True"
                              Name="Selecttheme" />
                <ComboBoxItem Content="Carcasonne"
                              Name="Default" />
                <ComboBoxItem Content="Greyscale"
                              Name="Greyscale" />
                <ComboBoxItem Content="StarWars"
                              Name="StarWars" />
            </ComboBox>
        </StackPanel>

        <Grid x:Name="SidePanelSetup"
              Grid.Row="1"
              Grid.Column="3"
              Visibility="Visible"
              DataContext="{Binding StartSidebar}">
            <Grid.RowDefinitions>
                <RowDefinition Height="300" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>

                <ColumnDefinition />
                <ColumnDefinition Width="250" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Image Grid.Row="0"
                   Grid.Column="1"
                   x:Name="ImgAvatarPrev"
                   Source="{Binding PropStart, Mode=TwoWay}" />

            <Label Content="Enter your name below"
                   FontSize="25"
                   Grid.Row="2"
                   Grid.Column="1" />

            <TextBox x:Name="TxtPlayerName"
                     Grid.Row="3"
                     Grid.Column="1"
                     Text="{Binding Name, Mode=TwoWay}" />
            <!--<ComboBox x:Name="CBPawnSelector"
                      Grid.Row="4"
                      Grid.Column="1">
                <ComboBoxItem Name="CBRed"
                              Content="Red"
                              Foreground="Red" />
                <ComboBoxItem Name="CBGreen"
                              Content="Green"
                              Foreground="Green" />
                <ComboBoxItem Name="CBBlue"
                              Content="Blue"
                              Foreground="Blue" />
                <ComboBoxItem Name="CBPurple"
                              Content="Purple"
                              Foreground="Purple" />
                <ComboBoxItem Name="CBOrange"
                              Content="Orange"
                              Foreground="DarkOrange" />
                <ComboBoxItem Name="CBYellow"
                              Content="Yellow"
                              Foreground="Yellow" />
            </ComboBox>-->

            <ComboBox x:Name="DropDwnPickColor"
                      ItemsSource="{Binding PawnColor, Mode=TwoWay}"
                      Grid.Row="4"
                      Grid.Column="1"
                      Text="Pick a color">
                <ComboBox.ItemTemplate>
                    <DataTemplate>

                        <TextBlock Text="{Binding Name, Mode=TwoWay}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button x:Name="BtnSelectAvatar"
                    Content="SelectAvatar"
                    Grid.Row="1"
                    Grid.Column="1"
                    Click="BtnSelectAvatar_Click" />

            <Button x:Name="BtnAddPlayer"
                    Content="Add player!"
                    Grid.Row="5"
                    Grid.Column="1"
                    Click="BtnAddPlayer_Click" />

            <Button Content="Start Game!"
                    Grid.Row="6"
                    Grid.Column="1"
                    Click="BtnStartGame_Click" />
        </Grid>

        <Grid x:Name="SidePanelPlaying"
              Background="Black"
              Grid.Row="1"
              Grid.Column="3"
              Visibility="Collapsed"
              DataContext="{Binding PlaySidebar}">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.7*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="5*" />

                <RowDefinition Height="2.5*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>
            <Grid.Resources>
            </Grid.Resources>

            <Label x:Name="CurrentTurn2"
                   Grid.Row="5"
                   Content="{Binding CurrentTurn, Mode=TwoWay}"
                   Foreground="White">
            </Label>
            <StackPanel Orientation="Vertical"
                        Grid.Row="3">
                <TextBox x:Name="CurrentTurn"
                         Margin="5"
                         FontSize="25"
                         Text="{Binding CurrentTurn, Mode=TwoWay}"></TextBox>
                <TextBox x:Name="DiceRolled"
                         Margin="5"
                         FontSize="25"
                         Text="{Binding DiceRolled, Mode=TwoWay}"></TextBox>
                <Button Content="Throw dice(test)"
                        x:Name="throwDice"
                        Grid.Row="5"
                        Margin="5"
                        Click="BtnDice_Click"
                        Height="40" />
            </StackPanel>

            <Button Content="Quit Game"
                    x:Name="btnQuit"
                    Grid.Row="0"
                    Margin="10"
                    Background="Red"
                    Click="BtnQuit_Click" />

            <Image Grid.Row="1"
                   x:Name="ImgAvatar"
                   Source="{Binding VideoPath, Mode=TwoWay}" />

            <TextBlock Text="test"
                       Grid.Row="2"
                       Foreground="White"
                       Margin="20"></TextBlock>
        </Grid>
    </Grid>
</Window>